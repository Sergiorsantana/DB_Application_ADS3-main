<main>
    <div class="container">
        <div class="row">
            <div class="col-6 offset-3">
                <form action="Cadastrar" method="post" enctype="multipart/form-data">
                    <input type="text"   name="nome" class="form-control" placeholder="Nome do Produto">
                    <input type="number" name="valor" class="form-control" placeholder="Valor do Produto">
                    <input type="file"   name="imagem" class="form-control">
                    <input type="submit" classe="btn btn-primary" value="Cadastar">
                </form>
            </div> 
        </div>
    </div>
    {{!--Listagem de produtos--}}
    <div class="container">
        <div class="row">
           {{#each produtos}}
           <div class="col-12 col=sm-6 col-md-4 col-lg-3">
                <div class="card">
                    <img src="../imagem/{{imagem}}" >
                    <div>
                        <p>{{nome}}</p>
                        <p>{{Valor}}</p>
                    </div>
                    <a href="#" class="btn btn-warning">Alterar</a>
                    <a href="#" class="btn btn-danger">Excluir</a>
                </div>
            </div>  
           {{/each}}
        </div>
    </div>
</main>
    
            
